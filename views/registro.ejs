<div class="row justify-content-center mt-4 mb-5">
  <div class="col-12 col-sm-10 col-md-8 col-lg-6">
    <div class="card shadow-lg border-0">
      <div class="card-body p-5">
        
        <div class="text-center mb-4">
          <div class="bg-success bg-opacity-10 d-inline-block p-3 rounded-circle mb-3">
            <i class="bi bi-controller text-success fs-1"></i>
          </div>
          <h2 class="fw-bold text-dark">Crea tu Cuenta</h2>
          <p class="text-muted">Únete a la comunidad de coleccionistas</p>
        </div>

        <% if (error) { %>
          <div class="alert alert-danger d-flex align-items-center" role="alert">
            <i class="bi bi-exclamation-circle-fill me-2"></i>
            <div><%= error %></div>
          </div>
        <% } %>

        <form action="/registro" method="post" class="row g-3">
          <div class="col-12">
            <label for="idEmail" class="form-label fw-semibold">Email</label>
            <input
              type="email"
              class="form-control py-2 shadow-sm"
              id="idEmail"
              name="email"
              required
              value="<%= email || '' %>"
            />
          </div>

          <div class="col-12">
            <label for="idNick" class="form-label fw-semibold">Nombre de Usuario</label>
            <input
              type="text"
              class="form-control py-2 shadow-sm"
              id="idNick"
              name="nick"
              required
              value="<%= nick || '' %>"
            />
          </div>

          <div class="col-md-6">
            <label for="idPassword" class="form-label fw-semibold">Contraseña</label>
            <input
              type="password"
              class="form-control py-2 shadow-sm"
              id="idPassword"
              name="password"
              required
            />
          </div>

          <div class="col-md-6">
            <label for="idPassword2" class="form-label fw-semibold">Repetir Contraseña</label>
            <input
              type="password"
              class="form-control py-2 shadow-sm"
              id="idPassword2"
              name="password2"
              required
            />
          </div>

          <div class="col-12 mt-4">
            <button class="btn btn-primary w-100 py-3 fw-bold shadow-sm" type="submit">
              Comenzar mi Colección
            </button>
          </div>

          <div class="text-center mt-4">
            <p class="mb-0 text-muted">
              ¿Ya eres miembro? <a href="/login" class="text-primary fw-bold text-decoration-none">Inicia Sesión</a>
            </p>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>